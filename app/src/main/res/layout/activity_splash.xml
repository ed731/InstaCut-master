<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ellie.instacut_master.SplashActivity">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@color/splashBackground"
        >

        <ImageView
            android:id="@+id/scissors"
            android:layout_width="59dp"
            android:layout_height="227dp"
            android:layout_gravity="center"
            android:src="@drawable/scissors_splash"
            android:layout_marginRight="115dp"
            android:layout_marginEnd="115dp"
            android:layout_marginLeft="160dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="50dp"

            />


        <ImageView
            android:id="@+id/clippers"
            android:layout_width="29dp"
            android:layout_height="289dp"
            android:src="@drawable/clippers_splash"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginRight="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginTop="125dp"
            android:layout_marginBottom="100dp"

            />

        <TextView
            android:id="@+id/insta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp"
            android:layout_marginRight="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginTop="250dp"
            android:layout_marginBottom="80dp"
            android:text="@string/insta"
            android:textSize="40sp"
            />

        <TextView
            android:id="@+id/cuts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginStart="250dp"
            android:layout_marginRight="100dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="250dp"
            android:layout_marginBottom="80dp"
            android:text="@string/cut"
            android:textSize="40sp"
            />

        <ImageView
            android:id="@+id/scissors_1"
            android:layout_width="59dp"
            android:layout_height="227dp"
            android:layout_gravity="center"
            android:src="@drawable/scissors_splash"
            android:layout_marginRight="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginLeft="105dp"
            android:layout_marginStart="118dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="50dp"

            />

        <ImageView
            android:id="@+id/clippers_1"
            android:layout_width="29dp"
            android:layout_height="289dp"
            android:src="@drawable/clippers_splash"
            android:layout_marginLeft="130dp"
            android:layout_marginStart="123dp"
            android:layout_marginRight="105dp"
            android:layout_marginEnd="100dp"
            android:layout_marginTop="125dp"
            android:layout_marginBottom="100dp"

            />


    </FrameLayout>


</RelativeLayout>
